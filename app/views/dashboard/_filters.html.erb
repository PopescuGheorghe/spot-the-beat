<div class="filters">
  <div class="container">
    <div class="row">
      <div class="col s1 m1 l1"></div>
      <%= form_tag(dashboard_path, method: :get) do %>
        <div class="input-field col s3 m3 h3">
          <%= text_field_tag :artistName, params[:artistName], placeholder: 'Artist Name' %>
        </div>
        <div class="input-field col s3 m3 h3">
          <%= text_field_tag :cityName, params[:cityName], placeholder: 'City' %>
        </div>
        <%= submit_tag 'Search', name: nil,  class: 'btn search right' %>
      <% end %>
    </div>
  </div>
</div>

