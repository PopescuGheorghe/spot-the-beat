<div class="filters">
  <div class="container">
    <div class="row">
      <%= form_with(url: '') do |form|%>
        <div class="input-field col s3 m3 h3">
          <%= form.text_field :artistName, placeholder: 'Artist Name' %>
        </div>
        <div class="input-field col s3 m3 h3">
          <%= form.text_field :cityName, placeholder: 'City' %>
        </div>
        <%= form.submit 'Search', class: 'btn search' %>
      <% end %>
    </div>
  </div>
</div>

